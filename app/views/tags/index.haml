.header
  .topnav.float-left
    %a{href: '#'} Commits
  .topnav.float-left{style: "margin-left: 10px;"} Tags
  .float-right{style: "margin-top: 10px"} 
    %i.icon-download-alt
    %a{href: "/api/commits.csv"} Export

#tags-view{:"ng-controller" => "TagsController"}
  #tags-list.float-left.clr
    .tag{:"ng-repeat" => "tag in tags"}
      .inside-box{:"ng-style" => "{ width: tag.count/tagMax*340, 'background-color': tag.color }"}
        {{ tag.count }}
      .outside-box
        %a{:"ng-click" => "showTag(tag)"} {{ tag.text }} 
        

  #tag-detail.float-left
    .tag-text
      {{ shownTag.text }}

    #chart-container
      .chart
      .x-axis
      .legend
      
